<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Стиль для всех окон -->
    <Style TargetType="{x:Type Window}" x:Key="StyleWindow">
        <Setter Property="FontFamily"  Value="Courier New"/>
        <Setter Property="Background"  Value="DarkGray"/>
        <Setter Property="Height"  Value="750"/>
        <Setter Property="Width"  Value="1200"/>
        <Setter Property="FontSize"  Value="18"/>
    </Style>

    <!-- Стиль для всех датагридов -->
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Margin" Value="5"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Cursor" Value="IBeam"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для всех текстбоксов -->
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush"  Value="Black"/>
        <Setter Property="VerticalContentAlignment"  Value="Center"/>
        <Setter Property="Text"  Value="-"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Cursor" Value="IBeam"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для всех комбобоксов -->
    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush"  Value="Black"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для всех листбоксов -->
    <Style TargetType="ListBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush"  Value="Black"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для всех текстблоков -->
    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для всех кнопок -->
    <Style TargetType="Button">
        <Setter Property="Height"  Value="Auto"/>
        <Setter Property="Width"  Value="Auto"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush"  Value="Black"/>
        <Setter Property="Background" Value="LightGray"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>