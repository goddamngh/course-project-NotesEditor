<Window x:Class="NoteEditor.UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteEditor.UI"
        mc:Ignorable="d"

        WindowStartupLocation="CenterScreen"
        Title="NoteEditor.PaymentWindow"
        Style="{StaticResource StyleWindow}"
        Height="428"
        Width="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Оплата подписки на неограниченное количество заметок"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"/>

        <TextBlock Text="Номер карты:"
                   Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="CardNumberTextBox"
                 Grid.Row="1"
                 Grid.Column="1"
                 MaxLength="19"
                 PreviewTextInput="TextBox_PreviewTextInput"/>

        <TextBlock Text="Срок действия карты:"
                   Grid.Row="2"
                   Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBox x:Name="ExpiryDateTextBox"
                 Grid.Row="2"
                 Grid.Column="1"
                 MaxLength="5"
                 PreviewTextInput="TextBox_PreviewTextInput"/>

        <TextBlock Text="CVV:"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="CvvTextBox"
                 Grid.Row="3"
                 Grid.Column="1"
                 MaxLength="3"
                 PreviewTextInput="TextBox_PreviewTextInput"/>

        <TextBlock Text="Сумма к оплате:"
                   Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"/>
        <TextBlock Text="100 рублей"
                   Grid.Row="4"
                   Grid.Column="1"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>

        <TextBlock Text="Пароль от аккаунта:"
                   Grid.Row="5"
                   Grid.Column="0"
                   VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox"
                     Grid.Row="5"
                     Grid.Column="1"
                     Margin="10"
                     BorderBrush="Black"
                     BorderThickness="1"
                     Background="WhiteSmoke"
                     ToolTip="Введите пароль от вашего аккаунта"/>

        <Button Grid.Row="6"
                Grid.Column="1"
                x:Name="CancelButton"
                Content="Отмена"
                Margin="5"
                Padding="20,10"
                Click="CancelButton_Click"/>

        <Button Grid.Row="6"
                Grid.Column="0"
                x:Name="PayButton"
                Content="Оплатить"
                Margin="5"
                Padding="20,10"
                Click="PayButton_Click"/>

    </Grid>
</Window>